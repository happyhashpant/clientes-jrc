                    <i class="material-icons">clear</i>
                    <span class="text">Eliminar</span>
                  </button>
                </div>
                <input
                  list="activitiesList"
                  name="businessActivity"
                  id="businessActivity"
                  class="form-select"
                  required
                />
                <datalist id="activitiesList">
                  <% const activities = activity; var j=0;
                  activity.forEach(function(datas){ %>
                  <option value="<%=datas.id%> <%=datas.activityName%>"></option>
                  <% j++; }) %>
                </datalist>
              </div>
            </form>
          </div>
